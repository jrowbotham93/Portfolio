    <script>

    let isScrolling = false; 

    window.addEventListener("scroll", throttleScroll, false);
 
            function throttleScroll(e) {
               if(isScrolling == false){
                   window.requestAnimationFrame(function(){
                       scrolling(e);
                       isScrolling = false;
                   });
                   }
                   isScrolling = true;
               }  
    
    document.addEventListener("DOMContentLoaded", scrolling, false);
            
        var aboutSection = document.getElementsByClassName("about-container");
        var mainSection = document.getElementsByClassName("main-container");
        // var secondBox = document.querySelector("#secondBox");

    function scrolling(e){

        if (isPartiallyVisible(aboutSection)) {
        aboutSection.classList.add("active");
 
        document.aboutSection.classList.add("colorChange");
        document.aboutSection.classList.remove("about-container");
      } else {
        document.aboutSection.classList.add("colorChange");
        document.aboutSection.classList.remove("about-container");
      }
 
      if (isFullyVisible(aboutSection)) {
        aboutSection.classList.add(".about-container:active ");
 
        document.aboutSection.classList.add("about-container");
        document.aboutSection.classList.remove("colorChange");
      }

      for (var i = 0; i < aboutSection.length; i++) {
        var aboutSect = aboutSection[i];
 
        if (isPartiallyVisible(aboutSect)) {
          aboutSect.classList.add("colorChange");
        } else {
          aboutSect.classList.remove("about-container");
        }
      }
    }
 
    function isPartiallyVisible(el) {
      var elementBoundary = el.getBoundingClientRect();
 
      var top = elementBoundary.top;
      var bottom = elementBoundary.bottom;
      var height = elementBoundary.height;
 
      return ((top + height >= 0) && (height + window.innerHeight >= bottom));
    }
 
    function isFullyVisible(el) {
      var elementBoundary = el.getBoundingClientRect();
 
      var top = elementBoundary.top;
      var bottom = elementBoundary.bottom;
 
      return ((top >= 0) && (bottom <= window.innerHeight));
    }

            
    
    </script>
